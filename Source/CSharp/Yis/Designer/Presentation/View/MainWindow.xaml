<w:MainWindowBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:w="clr-namespace:Yis.Framework.Presentation.Window"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"             
        xmlns:catel="http://catel.codeplex.com"                          
        xmlns:ViewModel="clr-namespace:Yis.Designer.Presentation.ViewModel" x:Class="Yis.Designer.Presentation.View.MainWindow"                          
        Title="{Binding Title, Mode=OneWay}" >
    <w:MainWindowBase.DataContext>
        <ViewModel:MainViewModel/>
    </w:MainWindowBase.DataContext>
    <StackPanel x:Name="LayoutRoot">
        <Ribbon/>
        <Button Command="{Binding CommandTest}">Test</Button>
        <TextBox Text="{Binding TestText, NotifyOnValidationError=True, Mode=TwoWay}"></TextBox>
        <TextBox Text="no binding"></TextBox>
    </StackPanel>
</w:MainWindowBase>
